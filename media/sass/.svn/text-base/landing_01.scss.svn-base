/* base */
body { font-family: Arial,Helvetica,Garuda,sans-serif; font-size: 13px; }
ul, ol, li { margin: 0; padding: 0; }
li { list-style:none; }
img, a {outline: none; border: 0; }
a { color: #c00d6b;}
a:hover { color: #980050;}

.clear-both { clear:both; }
.float-left { float:left; }
.float-right { float:right; }

.margin-left14{ margin-left: 14px;}
.margin-bottom10 { margin-bottom: 10px !important; }
.margin-bottom20 { margin-bottom: 20px !important; }
.margin-bottom30 { margin-bottom: 30px !important; }
.margin-bottom40 { margin-bottom: 40px !important; }

label {color: #343434; font-size:14px; 
	span.necessary { color: #c00d6a; }
}

.cvc-tip {
	text-decoration: none; position: relative; display: inline-block; vertical-align: middle; margin: -14px 0 -8px 0;
	.cvcimg { @include sprite-landing(business-cvcimg); }  
	.info { 
		display: none; color: #000; background: #fff; @include border-radius(6px);
  		.cvc { float: left; margin: 0px 8px 8px 0; }
 	}

	&:hover .info { display: block; position: absolute; top: 0; left: 0; z-index: 1000; width: auto; border: 1px solid #ddd; margin-top: -110px; margin-left: 22px; overflow: hidden; padding: 8px; @include box-shadow(0 0 5px 0px #A8A8A8);  }
}
input[type="text"],
input[type="password"],
textarea ,select {
	outline: none;
	width: 260px !important; padding: 0 10px; margin:5px 0 10px;  display: block; height: 32px; @include border-radius(6px); border: none; background: #efefef; color: #000; 
	&:hover { @include box-shadow(inset 2px 2px 1px #999999, inset 0 0 1px #999999); @include animate(box-shadow); }
	&:focus { @include single-box-shadow(inset, 0, 0, 2px, #c00d6a); @include animate(box-shadow); background: #f7f7f7; -webkit-appearance: none; }
 }

 input[disabled="disabled"] {
 	background: #ccc;
 	&:hover { color: #fff; background: #ccc; cursor: default; }
 }

select { height: 32px; width: 90px !important; line-height: 32px; display:inline-block; padding: 8px 10px; }

textarea { min-height: 191px; resize: none;}

textarea { padding: 10px; }
.comment-textarea { @include border-radius(0); background: #fff; min-height: 30px; @include box-shadow(inset, 0, 0, 10px, rgba(0,0,0,.1)); border: 1px solid #ddd; }

input[type="checkbox"] { margin: 1px 0 0 0; display: block; float: left; }
input[type="checkbox"] + span { margin: 0 0 0 30px; display: block; } // text label for the checkbox

input, textarea {
	&.xxsmall { width: 50px !important; }
	&.xsmall { width: 60px !important; }
	&.small { width: 147px !important; }
	&.medium { width: 207px !important; }  
	&.large { width: 274px !important; }
	&.xlarge { width: 327px !important; }
	&.super-large { padding: 10px !important; font-size: 22px; }
}

button, .form-button { display: inline-block; cursor:pointer; padding: 10px 25px; border: none; @include light-shadow(); @include border-radius(6px); color:#fff; font-weight:bold; font-size:14px; text-decoration: none;
	@include animate(color);
	background-color: #d21677; // Old browsers
	$experimental-support-for-svg: true;
	@include background-image(linear-gradient(top,  #d21677 0%,#a40155 100%));
}

button:hover, .form-button:hover {
	background: #ca0b6e; color: #f9569b;	
}

.as-seen-in-image { @include sprite-blur(as_seen_in); margin: 0 auto;  margin-bottom: 40px;  }

